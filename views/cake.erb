<head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<form action="" method="DELETE" id="delete_form">
    <button id="delete_btn" type="submit">Delete Cake</button>
</form>

<form action="" method="put" id="edit_form">
    <input type="text" id="new_cake_name" name="name">
    <button id="update_btn" type="submit">Update Cake Name</button>
</form>
</body>



<script>
var url = window.location.href;

document.getElementById('delete_form').action = url;
document.getElementById('edit_form').action = url;

var id = <%= id %>;
var path = window.location.pathname;
$(document).ready(function(e) {
   $.getJSON(path + '/json', function(result) {
       $('body').append('This page is for cake: '+ result.name + ' with id: ' + id);
   });
});
</script>

